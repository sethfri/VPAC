<% provide(:title, 'Board Nomination') %>
<% provide(:jumbotron_class, 'contact') %>

<div class="jumbotron jumbotron-contact">
  <div class="container">
    <h1><%= yield(:title) %></h1>
    <p>Please use this nomination form to tell us about someone you think would be a great fit for VPAC Board!</p>
  </div>
</div>

<div class="container-content">
  <div class="container">
    <%= form_tag(send_nomination_email_path) do %>
        <div class="form-group">
          <%= label_tag 'nominee', 'Nominee' %>
          <%= text_field_tag 'nominee', nil, class: 'form-control', placeholder: 'Nominee\'s Name' %>
        </div>
        <div class="form-group">
          <%= label_tag 'email', 'Email' %>
          <%= email_field_tag 'email', nil, class: 'form-control', placeholder: 'Nominee\'s Email Address' %>
        </div>
        <div class="form-group">
          <%= label_tag 'nominator', 'Nominator' %>
          <%= text_field_tag 'nominator', nil, class: 'form-control', placeholder: 'Your Name (optional)' %>
        </div>
        <%= submit_tag nil, class: 'btn btn-default btn-about pull-right' %>
    <% end %>
  </div>
</div>

<%= render 'layouts/footer' %>